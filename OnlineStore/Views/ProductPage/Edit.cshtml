@model ProductDto

<form method="POST" action="/ProductPage/Update/@Model.ProductId" enctype="multipart/form-data">
    <div style="display:none"><input name="ProductId" value="@Model.ProductId" /></div>
    <div>
        <label for="ProductName">Product Name:</label>
        <input type="text" name="ProductName" id="ProductName" value="@Model.ProductName" />
    </div>
    <div>
        <label for="ProductName">Product SKU:</label>
        <input type="text" name="ProductSKU" id="ProductSKU" value="@Model.ProductSKU" />
    </div>
    <div>
        <label for="ProductName">Product Price:</label>
        <input type="text" name="ProductPrice" id="ProductPrice" value="@Model.ProductPrice" />
    </div>
    <div>
        <label for="ProductName">Product Description:</label>
        <textarea name="ProductDescription" id="ProductDescription" class="mce">@Model.ProductDescription</textarea>
    </div>
    <div>
        <label for="ProductPic">Image:</label>
        <input type="file" name="ProductPic" id="ProductPic" />
    </div>
    <div>
        <input type="submit" value="Edit Product" />
    </div>
</form>